:javascript
  $(document).ready(function(){
    $('#ibangood').hide();
    $('#ibanbad').hide();
    $('#ibanwait').hide();
    $('#bankname').parent().parent().hide();

    $('#iban').on('change', function(){
      $('#ibangood').hide();
      $('#ibanbad').hide();
      $('#ibanwait').show();
      $('#bankdetails').html("");

      $.ajax({
        url: '/iban/check',
        method: 'post',
        dataType: 'json',
        data: { iban: $('#iban').val() }
      }).done(function(data){
        if ( data["r"] ) {
           $('#ibangood').show();
           $('#bankname').parent().parent().show();
           $('#bankname').html("<img src='/images/loader.svg'>");
           $.ajax({
             url: '/iban/bankdetails',
             method: 'post',
             dataType: 'json',
             data: { iban: $('#iban').val() }
           }).done(function(data){
             $('#bankname').html("");
             $('#bankdetails').html(data["form"]);
           });
        } else {
           $('#ibanbad').show();
        }
        $('#ibanwait').hide();
      });
    });
  });
